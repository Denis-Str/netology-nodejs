<form method="post" class="mt-5">
    <div class="form-group">
        <label for="inputTitle">Title</label>
        <input type="text"
           value="<%= book.title %>"
           name="title"
           class="form-control"
           id="inputTitle">
    </div>
    <div class="form-group">
        <label for="inputAuthors">Author</label>
        <input type="text"
               value="<%= book.author %>"
               name="author"
               class="form-control"
               id="inputAuthors">
    </div>

    <div class="form-group">
        <label for="inputFavorite">Favorite</label>
        <input type="text"
               value="<%= book.favorite %>"
               name="favorite"
               class="form-control"
               id="inputFavorite">
    </div>

    <div class="form-group">
        <label for="inputDesc">Description</label>
        <textarea
            rows="3"
            name="description"
            class="form-control"
            id="inputDesc"
        ><%= book.description %></textarea>
    </div>
    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>